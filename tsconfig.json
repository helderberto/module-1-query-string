{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}

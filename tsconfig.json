{
  // Change this to match your project
  "include": ["src/**/*"],
  "compilerOptions": {
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    // Enable exnext target
    "target": "esnext",
    // Generate d.ts files
    "declaration": true,
    "module": "commonjs",
    // Output directory to ./dist
    "outDir": "dist"
  }
}
